<UserControl x:Class="Pokladna.Ribbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pokladna"
             xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
             mc:Ignorable="d" >
    <Grid>
        <Ribbon SelectedIndex="0">
            <RibbonTab Header="Domů">
                <RibbonGroup Header="Hlavní">
                    <RibbonButton Label="Zaměstnanci" />
                </RibbonGroup>
                <RibbonGroup Header="Výstupy">
                    <RibbonButton Label="Transakce" />
                    <RibbonButton Label="Prodeje položek" />
                </RibbonGroup>
                <RibbonGroup>
                    <RibbonButton Label="Nastavení" />
                </RibbonGroup>
            </RibbonTab>
            <Ribbon.ContextualTabGroups>
                <RibbonContextualTabGroup Background="LightGreen" Visibility="Visible">
                    <RibbonTab Header="Zaměstnanci">
                        <RibbonGroup Header="Zaměstnanec">
                            <RibbonButton Label="Přidat" LargeImageSource="Pokladna;component/Resources/user-new.png"/>
                            <RibbonButton Label="Upravit" LargeImageSource="Pokladna;component/Resources/user-properties.png" />
                            <RibbonButton Label="Odstranit" LargeImageSource="Pokladna;component/Resources/user-delete.png" />
                        </RibbonGroup>
                    </RibbonTab>
                </RibbonContextualTabGroup>
            </Ribbon.ContextualTabGroups>

        </Ribbon>
    </Grid>
</UserControl>
